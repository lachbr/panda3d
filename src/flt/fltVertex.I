////////////////////////////////////////////////////////////////////
//     Function: FltVertex::has_color
//       Access: Public
//  Description: Returns true if the vertex has a primary color
//               indicated, false otherwise.
////////////////////////////////////////////////////////////////////
INLINE bool FltVertex::
has_color() const {
  return (_flags & F_no_color) == 0;
}
