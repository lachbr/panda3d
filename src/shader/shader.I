int FrustumShader::add_frustum(ProjectionNode* frust)
{
  make_dirty();
  _frusta.push_back(frust);
  return (_frusta.size());
}

////////////////////////////////////////////////////////////////////
//     Function: FrustumShader::remove_frustum
//       Access:
//  Description:
////////////////////////////////////////////////////////////////////
int FrustumShader::remove_frustum(ProjectionNode* frust)
{
  make_dirty();
  int found = 0;
  ProjectionVector::iterator i;
  for (i = _frusta.begin(); i != _frusta.end(); ++i) {
    if ((*i) == frust) {
      _frusta.erase(i);
      return true;
    }
  }
  return false;
}
