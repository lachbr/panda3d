////////////////////////////////////////////////////////////////////
//    Function : lerp
//      Access : private
// Description : yali
////////////////////////////////////////////////////////////////////

INLINE float DiscEmitter::
lerp(float t, float x0, float x1) {
  return x0 + (t * (x1 - x0)); 
}

////////////////////////////////////////////////////////////////////
//    Function : cubic_lerp
//      Access : private
// Description : yaci
////////////////////////////////////////////////////////////////////

INLINE float DiscEmitter::
cubic_lerp(float t, float x0, float x1) {
  return x0 + ((t * t * (3 - (2 * t))) * (x1 - x0)); 
}
