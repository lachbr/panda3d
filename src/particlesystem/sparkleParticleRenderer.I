////////////////////////////////////////////////////////////////////
//    Function : get_radius
//      Access : public
////////////////////////////////////////////////////////////////////
INLINE float SparkleParticleRenderer::
get_radius(BaseParticle *bp) {
  if (_life_scale == SP_NO_SCALE)
    return _birth_radius;
  else {
    float s_x = CUBIC_T(bp->get_parameterized_age());
    return LERP(s_x, _birth_radius, _death_radius);
  }
}
