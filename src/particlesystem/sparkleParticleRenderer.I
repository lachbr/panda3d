////////////////////////////////////////////////////////////////////
//    Function : get_magnitude
//      Access : public
////////////////////////////////////////////////////////////////////
INLINE float SparkleParticleRenderer::
get_magnitude(BaseParticle *bp) {
  if (_life_scale == SP_NO_SCALE)
    return _birth_mag;
  else {
    float s_x = cubic_smooth(bp->get_parameterized_age());
    return lerp(s_x, _birth_mag, _death_mag);
  }
}
